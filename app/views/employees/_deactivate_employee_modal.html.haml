#deactivate_employee_modal.modal.fade{ 'aria-labelledby' => 'myModalLabel', role: :dialog, tabindex: '-1' }
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'modal', type: :button }
          %span{ 'aria-hidden' => 'true' } Ã—
        %h4.modal-title Modal title
      .modal-body
        = form_for(@employee, url: deactivate_employee_path) do |f|
          .form-group
            = f.label :end_date, 'Date of Leaving'
            = f.text_field :end_date, class: 'form-control', id: 'datepicker'
      .modal-footer
        %button.btn.btn-default{ 'data-dismiss' => 'modal', type: :button } Close
        %button.btn.btn-primary{:type => "button"} Save changes
